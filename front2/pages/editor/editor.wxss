  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  background-color: #fff;
  border: solid;
}

.ql-active {
  color: #22C704;
}

.iconfont-wx {
  display: inline-block;
  padding: 16rpx;
  cursor: pointer;
  font-size: 40rpx !important;
  width: 40rpx;
  height: 40rpx;
}

