<navbar parameter='{{parameter}}'></navbar>
<view class="top">
  <view class="evaluate-list">
  <view class='btn acea-row row-middle'>
    <view class='item {{type==-1 ? "bg-color":""}}' bindtap='changeType' data-type='-1'>
      全部
    </view>
    <view class='item {{type==0 ? "bg-color":""}}' bindtap='changeType' data-type='0'>
      未付款
    </view>
    <view class='item {{type==1 ? "bg-color":""}}' bindtap='changeType' data-type='1'>
      已付款
    </view>
    <view class='item {{type==2 ? "bg-color":""}}' bindtap='changeType' data-type='2'>
      已核销
    </view>
    <view class='item {{type==3 ? "bg-color":""}}' bindtap='changeType' data-type='3'>
      已评价
    </view>
    <view class='item {{type==4 ? "bg-color":""}}' bindtap='changeType' data-type='4'>
      已退款
    </view>
  </view>
</view>
</view>

<view class='my-order'>
  <view class='list'>
    <view class='item' wx:for="{{orderList}}" wx:key='index'>
      <view bindtap='goOrderDetails' data-id="{{item.id}}">
        <view class='title acea-row row-between-wrapper'>
          <view class="acea-row row-middle">
            <view>订单号{{item.id}}</view>
          </view>
          <view class='font-color'>待付款</view>
        </view>
        <view class='item-info acea-row row-between row-top'>
          <view class='pictrue'>
            <image src='{{item.productInfo.image}}'></image>
          </view>
          <view class='text acea-row row-between'>
            <view class='name line2'>
              <view class="activity-name">商品名</view>
              <view class="activity-time">时间</view>
            </view>
            <view class='money'>
              <view>￥123</view>
              <view>x3</view>
            </view>
          </view>
        </view>
        <view class='totalPrice'>总金额
          <text class='money font-color'>￥369</text>
        </view>
      </view>
    </view>
  </view>
</view>
<view class='noCart' wx:if="{{orderList.length == 0 && page > 1}}">
  <view class='pictrue'>
    <image src='/images/noOrder.png'></image>
  </view>
</view>