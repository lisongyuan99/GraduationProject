<navbar parameter='{{parameter}}'></navbar>
<view class="top">
  <view class="evaluate-list">
    <view class='btn acea-row row-middle'>
      <view class='item {{type==-1 ? "bg-color":""}}' bindtap='changeType' data-type='-1'>
        全部
      </view>
      <view class='item {{type==0 ? "bg-color":""}}' bindtap='changeType' data-type='0'>
        未付款
      </view>
      <view class='item {{type==1 ? "bg-color":""}}' bindtap='changeType' data-type='1'>
        已付款
      </view>
      <view class='item {{type==2 ? "bg-color":""}}' bindtap='changeType' data-type='2'>
        已核销
      </view>
      <view class='item {{type==3 ? "bg-color":""}}' bindtap='changeType' data-type='3'>
        已评价
      </view>
      <!-- <view class='item {{type==4 ? "bg-color":""}}' bindtap='changeType' data-type='4'>
      已退款
    </view> -->
    </view>
  </view>
</view>

<view class='my-order'>
  <view class='list'>
    <view class='item' wx:for="{{orderListDisplay}}" wx:key='index'>
      <view bindtap='goOrderDetails' data-id="{{item.order.id}}">
        <view class='title acea-row row-between-wrapper'>
          <view class="acea-row row-middle">
            <view>订单号：{{item.order.id}}</view>
          </view>
          <view class='font-color'>{{item.order.statusString}}</view>
        </view>
        <view class='item-info acea-row row-between row-top'>
          <view class='picture'>
            <image src='{{item.activity.picture}}'></image>
          </view>
          <view class='text acea-row row-between'>
            <view class='name line2'>
              <view class="activity-name">{{item.activity.name}}</view>
              <view class="activity-time">活动时间：{{item.activity.timeString}}</view>
            </view>
            <view class='name line2'>
              <view class="activity-time">活动地点：{{item.activity.address}}</view>
            </view>
            <view class='money'>
              <view>{{item.order.priceString}}</view>
              <view> × {{item.order.count}}</view>
            </view>
          </view>
        </view>
        <view class='totalPrice'>
          <view>
            <text class='order-time'>下单时间：{{item.order.timeString}}</text>
          </view>
          <view>
            <text class='money-title'>总金额</text>
            <text class='money font-color'>{{item.order.sumPriceString}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
