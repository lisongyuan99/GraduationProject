<!--pages/fan_list/fan_list.wxml-->
<navbar parameter="{{parameter}}"></navbar>
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="我的员工">
    <view wx:if="{{workerList}}" class="user">
      <view class="fan acea-row row-between-wrapper" wx:for="{{workerList}}" wx:key="index">
        <view class="picTxt acea-row row-between-wrapper">
          <view class="pictrue">
            <image wx:if="{{item.avatar}}" src="{{item.avatar}}"></image>
            <image wx:else src="/images/noAvatar.svg"></image>
          </view>

          <view class="text">
            <view class="acea-row row-middle">
              <view wx:if="{{item.name}}" class="name line1">{{item.name}}</view>
              <view wx:else class="name line1">无名氏</view>
            </view>
            <view>
              <text wx:if="{{item.phone}}">{{item.phone}}</text>
              <text wx:else>暂无手机号</text>
            </view>
          </view>
        </view>
        <button class="btn" size="mini" type="warn" bindtap="remove" data-fan-id="{{item.id}}">移除</button>
      </view>
    </view>
    <view wx:else class="user">
      暂无员工
    </view>
  </van-tab>
  <van-tab title="新的员工">
    <view wx:if="{{workerList}}" class="user">
      <view class="fan acea-row row-between-wrapper" wx:for="{{newWorkerList}}" wx:key="index">
        <view class="picTxt acea-row row-between-wrapper">
          <view class="pictrue">
            <image wx:if="{{item.avatar}}" src="{{item.avatar}}"></image>
            <image wx:else src="/images/noAvatar.svg"></image>
          </view>

          <view class="text">
            <view class="acea-row row-middle">
              <view wx:if="{{item.name}}" class="name line1">{{item.name}}</view>
              <view wx:else class="name line1">无名氏</view>
            </view>
            <view>
              <text wx:if="{{item.phone}}">{{item.phone}}</text>
              <text wx:else>暂无手机号</text>
            </view>
          </view>
        </view>
        <button class="btn" size="mini" bindtap="accept" data-fan-id="{{item.id}}">接受</button>
        <button class="btn" size="mini" type="warn" bindtap="deny" data-fan-id="{{item.id}}">拒绝</button>
      </view>
    </view>
  </van-tab>

</van-tabs>