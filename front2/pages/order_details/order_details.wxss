.list.on{background-color:#fff;border-top:1px solid #f6f6f6;}
.list .item{width:345rpx;margin-top:20rpx;background-color:#fff;border-radius:10rpx;}
.list .item.on{width:100%;display:flex;border-bottom:1rpx solid #f6f6f6;padding:15rpx;margin:0;}
.list .item .pictrue{width:100%;height:345rpx;position: relative;}
.list .item .pictrue.on{width:180rpx;height:180rpx;}
.list .item .pictrue image{width:100%;height:100%;border-radius:10rpx 10rpx 0 0;}
.list .item .pictrue image.on{border-radius:6rpx;}
.list .item .text{padding:20rpx 17rpx 26rpx 17rpx;font-size:30rpx;color:#222;}
.list .item .text.on{width:508rpx;padding:0 0 0 22rpx;}
.list .item .text .money{font-size:26rpx;font-weight:bold;margin-top:8rpx;}
/*.list .item .text .money.on{margin-top:50rpx;}*/
.list .item .text .money .num{font-size:34rpx;}
.list .item .text .vip{font-size:22rpx;color:#aaa;margin-top:7rpx;}
.list .item .text .vip.on{margin-top:12rpx;}
.list .item .text .vip .vip-money{font-size:24rpx;text-decoration:line-through;}
.list .item .text .vip .vip-money image{width:46rpx;height:21rpx;margin-left:4rpx;}
.money-panel{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}
.label{
  background-color: #FFF;
  padding: 10rpx 30rpx;
}
.title{
  background-color: #FFF;
}
.sum{
  font-weight: bold;
}
.sum-num{
  font-weight: bold;
  color:#fc4141;
}