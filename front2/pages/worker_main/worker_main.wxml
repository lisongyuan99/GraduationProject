<navbar parameter="{{parameter}}"></navbar>
<view class="user">

  <view class="header bg-color acea-row row-between-wrapper">
    <view class="picTxt acea-row row-between-wrapper">
      <view class="pictrue">
        <image src="{{avatar?avatar:'/images/noAvatar.svg'}}"></image>
      </view>
      <view class="text">
        <view class="name line1" wx:if="{{nickName}}">{{nickName}}</view>
        <view class="name line1" wx:else>无名氏</view>
      </view>
    </view>
  </view>

  <view class="wrapper">
    <view class="myService">
      <view class="title acea-row row-middle">常用操作</view>
      <van-grid column-num="2" direction="horizontal">
        <van-grid-item icon="setting-o" text="我的资料" url="/pages/worker_info/worker_info" />
        <van-grid-item icon="scan" text="扫码核验" bindtap="scanQr" />

      </van-grid>
    </view>
  </view>
</view>