   <view class='list acea-row row-between-wrapper {{is_switch==true?"":"on"}}'>
      <block wx:for="{{productListShow}}" wx:key='index'>
         <view class='item {{is_switch==true?"":"on"}}' bindtap="goDetail" data-id='{{item.id}}'>
            <view class='pictrue {{is_switch==true?"":"on"}}'>
               <image src='{{item.image}}' class='{{is_switch==true?"":"on"}}'></image>
               <text
                  class='{{is_switch === true ? "pictrue_log_big" : "pictrue_log"}} pictrue_log_class'>{{item.category}}</text>
            </view>
            <view class='text {{is_switch==true?"":"on"}}'>
               <view class='name line1'>{{item.name}}</view>
               <view class='vip acea-row row-between-wrapper {{is_switch==true?"":"on"}}'>
                  <view>活动时间 {{item.time}}</view>
                  <view>活动地点 {{item.position}}</view>
               </view>
               <view class='money font-color {{is_switch==true?"":"on"}}' wx:if="{{!item.free}}">
                  ￥<text class='num'>{{item.price}}</text>
               </view>
               <view class='money font-color {{is_switch==true?"":"on"}}' wx:else>
                  免费
               </view>

               <view class='vip acea-row row-between-wrapper {{is_switch==true?"":"on"}}'>
                  <view class='vip-money' wx:if="{{item.ori && !item.free}}">
                     ￥{{item.ori}}
                  </view>
                  <view>剩余{{item.count}}件</view>
               </view>
            </view>
         </view>
      </block>
      <!-- <navigator class='item {{is_switch==true?"":"on"}}' hover-class='none' wx:for='{{productList}}' url='/pages/goods_details/index?id={{item.id}}' wx:key='index'>
         
