<navbar parameter='{{parameter}}'></navbar>
<view class="top">
   <view class='search bg-color acea-row row-between-wrapper'>
      <view class='input acea-row row-between-wrapper'><text class='iconfont icon-sousuo'></text>
         <form bindsubmit="searchSubmit">
            <input placeholder-class='placeholder' placeholder='搜索活动' placeholder-class='placeholder'
               bindconfirm="searchSubmit" confirm-type='search' name="search" value='{{where.keyword}}'></input>
         </form>
      </view>
      <view class='iconfont {{is_switch==true?"icon-pailie":"icon-tupianpailie"}}' bindtap='Changswitch'></view>
   </view>

   <view class="evaluate-list">
      <view class='btn acea-row row-middle'>
         <view class='item {{type==0 ? "bg-color":""}}' bindtap='changeType' data-type='0'>
            全部
         </view>
         <view class='item {{type==1 ? "bg-color":""}}' bindtap='changeType' data-type='1'>
            已通过
         </view>
         <view class='item {{type==2 ? "bg-color":""}}' bindtap='changeType' data-type='2'>
            待审核
         </view>
         <view class='item {{type==3 ? "bg-color":""}}' bindtap='changeType' data-type='3'>
            已拒绝
         </view>
      </view>
   </view>
</view>

